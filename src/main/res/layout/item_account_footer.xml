<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/itemAccountFooter_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/itemAccountFooter_addImageContainer"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:id="@+id/itemAccountFooter_addImage"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:srcCompat="@drawable/ic_add_account"
                android:contentDescription="@null"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itemAccountFooter_addAccountTxt"
            android:layout_toEndOf="@+id/itemAccountFooter_addImageContainer"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/gt_america_light"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/new_green" />
    </RelativeLayout>
</layout>