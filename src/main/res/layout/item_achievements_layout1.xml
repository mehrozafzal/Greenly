<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemAchievement_image"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/ic_achievement_trophy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/itemAchievement_image"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUPERANVÄNDARE (Nov)"
                android:fontFamily="@font/gt_america_bold"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Var aktiv minst 6 unika dagar under en månad"
                android:fontFamily="@font/gt_america_light"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/grey3"
                android:layout_marginTop="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:progressDrawable="@drawable/bg_progress_achievements"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:id="@+id/fragmentProfile_levelProgress"
                    android:layout_width="0dp"
                    android:progress="40"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:text="1/6"
                    android:textColor="@color/grey14"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/gt_america_medium"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>