<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
       <variable
            name="handler"
            type="greenely.greenely.home.ui.HomeViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/size_26_dp"
        android:background="@drawable/banner_background"
        android:paddingRight="@dimen/size_26_dp"
        android:paddingBottom="@dimen/size_26_dp"
        android:paddingTop="@dimen/size_16_dp"
        android:layout_height="wrap_content">


        <TextView
            android:textAppearance="@style/TextAppearance.MediumSanSerif"
            android:id="@+id/title"
            android:textColor="@color/white"
            android:text="@string/retail_promo_title"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/size_18_sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:elevation="5dp"
            android:clickable="true"
            android:text="LÃ¤s mer"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/size_16_dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/snackbar_action"
            app:layout_constraintVertical_bias="0"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MediumSanSerif"
            android:textColor="@color/green_1"
            android:background="@drawable/rounded_selectable_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

