<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="greenely.greenely.solaranalysis.ui.householdinfo.SolarAnalysisViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                app:navigationOnClickListener="@{() -> viewModel.abort()}"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_close_black_24dp"
                app:title="@string/solar_analysis" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <com.stepstone.stepper.StepperLayout
                android:id="@+id/stepper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ms_activeStepColor="@color/accent"
                app:ms_backButtonColor="@color/accent"
                app:ms_nextButtonColor="@color/accent"
                app:ms_completeButtonColor="@color/accent"
                app:ms_completeButtonText="@string/send"
                app:ms_nextButtonText="@string/next"
                app:ms_backButtonText="@string/back"
                app:ms_showBackButtonOnFirstStep="false"
                app:ms_stepperType="dots"
                app:selectedStep="@={viewModel.index}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:elevation="100dp"
            android:id="@+id/loader"
            android:visibility="gone"
            android:background="#80FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible"
            tools:ignore="UnusedAttribute">

            <ProgressBar
                android:layout_gravity="center"
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="16dp"
                android:text="@string/loading"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
