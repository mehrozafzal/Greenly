<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:srcCompat="@drawable/ic_group"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textAlignment="center"
                android:text="Get notified about electricity usage"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/gt_america_medium"
                android:textColor="@color/grey22" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_gravity="center"
                android:background="@color/orange"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 POINTS"
                    android:fontFamily="@font/gt_america_bold"
                    android:textSize="@dimen/_10ssp"
                    android:lines="1"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:layout_margin="8dp"
                    android:textColor="@color/green_3" />
            </androidx.cardview.widget.CardView>

            <!--   <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/drop_shadow"
                   android:text="100 POINTS"
                   android:padding="8dp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:fontFamily="@font/gt_america_bold"
                   android:textSize="@dimen/_10ssp"
                   android:lines="1"
                   android:ellipsize="end"
                   android:elevation="10dp" />-->
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>

