<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/grey12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/grey9"
            android:id="@+id/sepTop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="@dimen/feed_item_margin"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.LightSanSerif"
            android:textSize="13sp"
            android:textColor="@color/black_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sepTop"
            tools:text="Some group"/>

        <View
            android:background="@color/grey9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

        <View
            android:layout_marginTop="8dp"
            android:background="@color/grey9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
