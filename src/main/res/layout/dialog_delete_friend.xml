<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/campaignItem_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/size_20_dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:paddingStart="@dimen/size_10_dp"
                    android:paddingEnd="@dimen/size_10_dp"
                    android:text="Radera vän från listan?"
                    android:textAppearance="@style/TextAppearance.Title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Du kommer inte längre att kunna tävla med denna vän."
                    android:textAppearance="@style/TextAppearance.Body4"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/size_10_dp"
                    android:paddingEnd="@dimen/size_10_dp"
                    android:layout_marginTop="@dimen/size_30_dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_30_dp">

                    <TextView
                        android:id="@+id/dialogFriend_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avbryt"
                        android:paddingTop="@dimen/size_10_dp"
                        android:textAppearance="@style/TextAppearance.Body4"
                        android:textColor="@color/friendList_radio_button_color"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:layout_toStartOf="@+id/dialogFriend_ok"
                        android:textSize="@dimen/size_16_sp"/>

                    <TextView
                        android:id="@+id/dialogFriend_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ta bort vän"
                        android:paddingTop="@dimen/size_10_dp"
                        android:textAppearance="@style/TextAppearance.Body4"
                        android:textColor="@color/friendList_radio_button_color"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="@dimen/size_20_dp"
                        android:layout_marginEnd="@dimen/size_10_dp"
                        android:textAllCaps="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/size_16_sp"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>