<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:startColor="@color/grey9"
                android:centerColor="@color/grey9"
                android:centerY="0.75"
                android:endColor="@color/grey9"
                android:angle="270" />
        </shape>

    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:startColor="@color/new_green"
                    android:endColor="@color/new_green"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>